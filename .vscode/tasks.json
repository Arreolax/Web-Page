{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Backend",
            "type": "shell",
            "command": "npm run start:dev",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": []
        },
        {
            "label": "Frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": []
        },
        {
            "label": "Start All",
            "dependsOn": ["Backend", "Frontend"],
            "dependsOrder": "parallel",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}